        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: calc(100vh - 13rem);
        text-align: center;
    }

    .buttons {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        flex-wrap: wrap;
    }

    .buttons a {
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        background-color: #f0f0f0;
        color: #333;
        text-decoration: none;
    }
    .buttons a:hover {
        background-color: #e0e0e0;
    }

    span {
